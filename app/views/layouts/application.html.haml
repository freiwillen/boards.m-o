        %br/
      Ўкромида:
      %b mari@kffa.info
      = succeed "\u{418}\u{440}\u{438}\u{43d}\u{430}" do
        %br/
      √ладенька:
      %b ira@kffa.info
      = succeed "\u{424}\u{43e}\u{442}\u{43e}-\u{43e}\u{442}\u{447}\u{435}\u{442}\u{44b}:" do
        %br/
      %b foto@kffa.info
