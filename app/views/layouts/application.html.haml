  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "billboards", :name => "description"}/
    %title Maximus outdoor
    %link{:href => "/favicon.ico", :rel => "shortcut icon", :type => "image/x-icon"}/
    = stylesheet_link_tag 'application'
    = csrf_meta_tags 
    %script{:src => "http://api-maps.yandex.ru/1.1/index.xml?key=#{ymaps_key}", :type => "text/javascript"}
  %body
    .a00
      .logo
        %a{:href => "/"}
          %img{:src => "/images/logo.png", :style => 'padding-left:32px'}/
      .menu
        .languages
          %div= link_to_lang 'ru'
          %div= link_to_lang 'ua'
        %br{:style => 'clear:both'}
        .pages
          %div= link_to_unless_current t('contacts'), contacts_path
          %div= link_to_unless_current t('team'), team_path
          %div= link_to_unless_current t('clients'), clients_path
          %div= link_to_unless_current t('address_base'), base_path
          %div= link_to_unless_current t('company'), root_path

    = yield 
